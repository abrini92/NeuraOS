# Neura Configuration Example
# Copy this file to .env and adjust values as needed

# API Settings
NEURA_API_HOST=0.0.0.0
NEURA_API_PORT=8000
NEURA_API_RELOAD=true
NEURA_API_WORKERS=1

# Paths
NEURA_DATA_DIR=./data
NEURA_LOGS_DIR=./logs
NEURA_VAULT_DIR=./neura_vault

# Logging
NEURA_LOG_LEVEL=INFO
NEURA_DEBUG=false

# Cortex (LLM)
NEURA_CORTEX_MODEL=llama3
NEURA_CORTEX_TEMPERATURE=0.7
NEURA_CORTEX_MAX_TOKENS=2048

# Memory
NEURA_MEMORY_DB_PATH=./data/memory.db
NEURA_MEMORY_VECTOR_SIZE=768
NEURA_QDRANT_HOST=localhost
NEURA_QDRANT_PORT=6333

# Vault
NEURA_VAULT_KEY_ITERATIONS=100000
NEURA_VAULT_SALT_LENGTH=32
